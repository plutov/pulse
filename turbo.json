{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "dependsOn": [],
      "outputs": ["src/apigen/**", "src/database/types/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "coverage": {
      "dependsOn": ["test"],
      "outputs": ["coverage/**"]
    },
    "format": {
      "cache": false
    }
  }
}
